<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/appbar_padding_top">

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Fat to Fit" />
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/button"
                android:text="Dummy Programme1" />
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_below="@id/button2"
                android:layout_height="200dp"
                android:text="Dummy Programme3" />
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_below="@id/button3"
                android:layout_height="200dp"
                android:text="Dummy Programme5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Fun Fitness" />
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/button6"
                android:text="Dummy Programme2" />
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_below="@id/button4"
                android:layout_height="200dp"
                android:text="dummy programme4" />
            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_below="@id/button5"
                android:layout_height="200dp"
                android:text="dummy programme6" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>
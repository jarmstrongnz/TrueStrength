<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/exercise_cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="0.01">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="" />

            <TextView
                android:id="@+id/exercise_headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"

                android:layout_toEndOf="@id/exercise_image"
                android:text="@string/heading"
                android:layout_alignParentTop="true" />

            <!-- reps text -->
            <TextView
                android:id="@+id/exercise_repsText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_image"
                android:layout_below="@id/exercise_headingText"
                android:padding="5dp" />


            <TextView
                android:id="@+id/exercise_repsText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_repsText0"
                android:layout_below="@id/exercise_headingText"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/exercise_repsText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_repsText1"
                android:layout_below="@id/exercise_headingText"
                android:padding="5dp"/>

            <!-- weights text -->
            <TextView
                android:id="@+id/exercise_weightsText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_image"
                android:layout_below="@id/exercise_repsText0"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/exercise_weightsText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_weightsText0"
                android:layout_below="@id/exercise_repsText1"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/exercise_weightsText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_information"
                android:layout_toEndOf="@id/exercise_weightsText1"
                android:layout_below="@id/exercise_repsText2"
                android:padding="5dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
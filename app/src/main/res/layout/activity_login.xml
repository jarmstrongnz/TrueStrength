<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.assignment.truestrength.Login">


    <!-- Titles : TextViews -->
    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_name"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_toStartOf="@+id/et_age"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title_view"
        android:text="True Strength Profile"
        android:textStyle="normal|bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc"
        android:text="Welcome, Please tell us about yourself!"
        android:textStyle="normal|bold"
        android:layout_below="@+id/Title_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="Height:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_height"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_gender"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/et_height"
        android:textSize="22sp" />

    <TextView
        android:text="Age:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_age"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/et_age"
        android:textSize="22sp" />


    <!-- Edit Text Fields : Where the Data goes -->


    <TextView
        android:layout_marginTop="17dp"
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gender"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/et_age"
        android:layout_alignParentStart="true"
        android:textSize="22sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_weight"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/tv_height"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/et_weight"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_gender"
        android:hint="Gender"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/tv_gender"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_gender"
        android:layout_alignTop="@+id/tv_gender"
        android:background="@color/cardview_light_background"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_weight"
        android:hint="weight"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/tv_weight"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/et_gender"
        android:layout_alignTop="@+id/tv_weight"
        android:background="@color/cardview_light_background"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_age"
        android:hint="Age"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/tv_age"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/et_gender"
        android:layout_alignTop="@+id/tv_age"
        android:background="@color/cardview_light_background"
        android:textSize="22sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name"
        android:hint="Name"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_alignTop="@+id/tv_name"
        android:background="@color/cardview_light_background"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_height"
        android:hint="Height"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/tv_height"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_height"
        android:layout_toEndOf="@+id/tv_gender"
        android:background="@color/cardview_light_background"
        android:textSize="22sp" />

    <Button
        android:text="Create Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:textColor="?attr/colorAccent"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:onClick="clickToMain"
        android:layout_below="@+id/tv_weight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>